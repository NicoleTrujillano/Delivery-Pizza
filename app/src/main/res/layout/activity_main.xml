<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="788dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000F3C" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000F3C"
            android:fontFamily="@font/ribeye_marrow"
            android:text="Good"
            android:textAlignment="center"
            android:textColor="#E7233C"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#000F3C"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="87dp"
                android:layout_height="61dp"
                app:srcCompat="@drawable/pizza" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="179dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/ribeye_marrow"
                android:text="Pizza"
                android:textAlignment="center"
                android:textColor="#E7233C"
                android:textSize="48sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="87dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pizza" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#000F3C"
            android:fontFamily="@font/atma_medium"
            android:text="- Delivery -"
            android:textAlignment="center"
            android:textColor="#E7233C" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/atma_medium"
            android:text="Top 1 do Brasil"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/atma_medium"
            android:text="Aberto de Segunda a Sábado das 18:00 às 22:00"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/atma_medium"
            android:text="Tempo médio de espera: 40min"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="336dp"
            app:srcCompat="@drawable/pizza2" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            app:srcCompat="@drawable/seta" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#00FFFFFF"
            android:backgroundTint="#FDC53E"
            android:fontFamily="@font/atma_medium"
            android:onClick="fazerPedido"
            android:text="Faça seu pedido"
            android:textColor="@color/black"
            android:textSize="34sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>